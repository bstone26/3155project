<div id="post">    
    <div id="postTitle">
        <h3>
            <%= @post.title %>
        </h3>
    </div>
    <div id="postCred">
       
            Posted by <%= @post.author %>
       
        
            at <%= @post.created_at %>
        
    </div>

    <div id="postContent">
        <p>
            <%= @post.text %>
        </p>
    </div>
</div>
<h2>Replies</h2>
<%= render @post.replies %>
<% if current_user %>
    <h2>Add a comment:</h2>
    <%= render 'replies/form' %>
<%else%>
    <p>You must be signed in to reply</p>
<% end %>

<%= link_to 'Posts', posts_path %>