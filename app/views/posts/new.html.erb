<p id="title">Post</p>
<%= form_for :post, url: posts_path do |f| %>
<p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :category %><br>
    <%= f.collection_select :category, Post::CATEGORIES, :to_s, :to_s,
        :include_blank => true%>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
<%= link_to 'Back to Posts', controller: 'posts' %>