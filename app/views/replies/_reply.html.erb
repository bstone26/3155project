<div id="reply">
  
  <div id="replyCred">
    <%= reply.commenter %>
    at <%=reply.created_at%>
  </div>
 
  <div id="replyContent">
    <%= reply.body %>
  </div>
  <% if current_user%>
  <div>
    <%= link_to 'Delete Reply', [reply.post, reply],
                method: :delete,
                data: {confirm: 'Are you sure' } %>
  </div>
  <% end %>
</div>