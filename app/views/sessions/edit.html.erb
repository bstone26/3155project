<div id="majorChange">
    <h1>Change Major</h1>
    <p>Current Major: <%=current_user.major%></p>
    <%= form_for :user, url: session_path(@user), method: :patch do |f| %>
    <p>
        <%= f.collection_select :major, User::MAJORS, :to_s, :to_s,
              :include_blank => true%>
    </p>
    <p>
        <%=f.submit "Save Change"%>
    </p>
    <% end %>
</div>

